{
  "plugins": ["prettier"],

  "extends": ["airbnb", "plugin:prettier/recommended"],

  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },

  "rules": {
    "no-var": "error",
    "no-param-reassign": "error",
    "no-unused-vars": "warn",
    "no-multiple-empty-lines": "error",
    "no-console": "off",
    "max-depth": ["error", 2],
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "class-methods-use-this": "off",
    "prefer-const": "off"
  }
}
